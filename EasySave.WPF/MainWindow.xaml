<Window x:Class="EasySave.WPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:EasySave.WPF"
        mc:Ignorable="d"
        Title="EasySave 2.0" Height="450" Width="800">

    <Grid>
        <StackPanel Margin="20">
            <TextBlock Text="EasySave 2.0 - Gestion des Sauvegardes" 
                       FontSize="24" FontWeight="Bold" Margin="0,0,0,20"/>

            <ListBox ItemsSource="{Binding JobsList}" Height="200">
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="{Binding Name}" FontWeight="Bold" Width="150"/>
                            <TextBlock Text="{Binding Source}" Margin="10,0,0,0"/>
                            <TextBlock Text=" -> "/>
                            <TextBlock Text="{Binding Target}"/>
                        </StackPanel>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>
        </StackPanel>
    </Grid>
</Window>