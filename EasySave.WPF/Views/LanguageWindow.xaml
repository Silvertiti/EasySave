<Window x:Class="EasySave.WPF.Views.LanguageWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="EasySave - Language" Height="350" Width="600"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None" ResizeMode="NoResize"
        Background="Transparent" AllowsTransparency="True"
        MouseDown="Window_MouseDown">

    <WindowChrome.WindowChrome>
        <WindowChrome CaptionHeight="0" ResizeBorderThickness="5" />
    </WindowChrome.WindowChrome>

    <Border Background="#1E1E1E" CornerRadius="15" BorderBrush="#333333" BorderThickness="1">
        <Grid>
            <Button Click="BtnClose_Click" Width="46" Height="32" 
                    HorizontalAlignment="Right" VerticalAlignment="Top" 
                    Margin="0,10,10,0"
                    Background="Transparent" BorderThickness="0">
                <Button.Template>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" Background="{TemplateBinding Background}" CornerRadius="5">
                            <TextBlock x:Name="Icon" Text="&#xE8BB;" FontFamily="Segoe MDL2 Assets" FontSize="10" Foreground="#AAAAAA" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#E81123"/>
                                <Setter TargetName="Icon" Property="Foreground" Value="White"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Button.Template>
            </Button>

            <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">

                <TextBlock Text="Bienvenue / Welcome" Foreground="White" 
                           FontSize="28" FontWeight="Bold" 
                           HorizontalAlignment="Center" Margin="0,0,0,10"/>

                <TextBlock Text="EasySave 2.0" Foreground="#007ACC" 
                           FontSize="16" FontWeight="SemiBold" 
                           HorizontalAlignment="Center" Margin="0,0,0,40"/>

                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">

                    <Button x:Name="BtnFR" Click="BtnFR_Click" Margin="0,0,30,0"
                            Width="160" Height="110" Background="#2D2D30" BorderThickness="1" BorderBrush="#3E3E42" Cursor="Hand">
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border x:Name="border" Background="{TemplateBinding Background}" BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="1" CornerRadius="15">
                                    <StackPanel VerticalAlignment="Center">
                                        <TextBlock Text="🇫🇷" FontSize="40" HorizontalAlignment="Center"/>
                                        <TextBlock Text="Français" Foreground="White" FontWeight="SemiBold" HorizontalAlignment="Center" Margin="0,10,0,0"/>
                                    </StackPanel>
                                </Border>
                                <ControlTemplate.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter TargetName="border" Property="Background" Value="#454545"/>
                                        <Setter TargetName="border" Property="BorderBrush" Value="#666666"/>
                                    </Trigger>
                                </ControlTemplate.Triggers>
                            </ControlTemplate>
                        </Button.Template>
                    </Button>

                    <Button x:Name="BtnEN" Click="BtnEN_Click" 
                            Width="160" Height="110" Background="#2D2D30" BorderThickness="1" BorderBrush="#3E3E42" Cursor="Hand">
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border x:Name="border" Background="{TemplateBinding Background}" BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="1" CornerRadius="15">
                                    <StackPanel VerticalAlignment="Center">
                                        <TextBlock Text="🇺🇸" FontSize="40" HorizontalAlignment="Center"/>
                                        <TextBlock Text="English" Foreground="White" FontWeight="SemiBold" HorizontalAlignment="Center" Margin="0,10,0,0"/>
                                    </StackPanel>
                                </Border>
                                <ControlTemplate.Triggers>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter TargetName="border" Property="Background" Value="#454545"/>
                                        <Setter TargetName="border" Property="BorderBrush" Value="#666666"/>
                                    </Trigger>
                                </ControlTemplate.Triggers>
                            </ControlTemplate>
                        </Button.Template>
                    </Button>

                </StackPanel>
            </StackPanel>
        </Grid>
    </Border>
</Window>