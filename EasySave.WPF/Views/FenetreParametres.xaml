<Window x:Class="EasySave.WPF.FenetreParametres"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Paramètres" Height="550" Width="500"
        WindowStartupLocation="CenterOwner"
        WindowStyle="None" ResizeMode="NoResize"
        AllowsTransparency="True" Background="Transparent"
        MouseDown="Window_MouseDown">

    <WindowChrome.WindowChrome>
        <WindowChrome CaptionHeight="0" ResizeBorderThickness="5" GlassFrameThickness="0" CornerRadius="0"/>
    </WindowChrome.WindowChrome>

    <Window.Resources>
        <SolidColorBrush x:Key="BgDark" Color="#121212"/>
        <SolidColorBrush x:Key="BgInput" Color="#252526"/>
        <SolidColorBrush x:Key="BorderColor" Color="#333333"/>
        <SolidColorBrush x:Key="EmeraldColor" Color="#10B981"/>
        <SolidColorBrush x:Key="EmeraldHover" Color="#34D399"/>
        <SolidColorBrush x:Key="TextPrimary" Color="#E0E0E0"/>
        <SolidColorBrush x:Key="TextSecondary" Color="#909090"/>

        <Style TargetType="TextBox">
            <Setter Property="Height" Value="35"/>
            <Setter Property="Background" Value="{StaticResource BgInput}"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderBrush" Value="{StaticResource BorderColor}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="Padding" Value="8,0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Border x:Name="border" Background="{TemplateBinding Background}" BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="{TemplateBinding BorderThickness}" CornerRadius="4">
                            <ScrollViewer x:Name="PART_ContentHost"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsFocused" Value="True">
                                <Setter TargetName="border" Property="BorderBrush" Value="{StaticResource EmeraldColor}"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Border Background="{StaticResource BgDark}" BorderBrush="#444" BorderThickness="1" CornerRadius="8">
        <Grid Margin="25">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <Grid Grid.Row="0" Margin="0,0,0,25">
                <TextBlock Text="Paramètres Généraux" Foreground="{StaticResource TextPrimary}" FontSize="20" FontWeight="SemiBold" VerticalAlignment="Center"/>

                <Button Click="BtnHeaderClose_Click" Width="30" Height="30" HorizontalAlignment="Right" VerticalAlignment="Top" Background="Transparent" BorderThickness="0" Cursor="Hand">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border x:Name="border" Background="{TemplateBinding Background}" CornerRadius="4">
                                <TextBlock x:Name="icon" Text="✕" Foreground="{StaticResource TextSecondary}" FontSize="12" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                            <ControlTemplate.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter TargetName="border" Property="Background" Value="#C0392B"/>
                                    <Setter TargetName="icon" Property="Foreground" Value="White"/>
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Button.Template>
                </Button>
            </Grid>

            <StackPanel Grid.Row="1">
                <TextBlock Text="Extensions à chiffrer (CryptoSoft)" Foreground="{StaticResource TextSecondary}" FontSize="12" Margin="0,0,0,6"/>
                <TextBox x:Name="TxtExtensions"/>
                <TextBlock Text="Séparez par des virgules (ex: txt,docx,json)" Foreground="#555" FontSize="10" Margin="0,4,0,15" FontStyle="Italic"/>

                <TextBlock Text="Logiciel Métier (Arrêt forcé)" Foreground="{StaticResource TextSecondary}" FontSize="12" Margin="0,0,0,6"/>
                <TextBox x:Name="TxtBusinessSoft"/>
                <TextBlock Text="Nom du processus sans .exe (ex: calc, notepad)" Foreground="#555" FontSize="10" Margin="0,4,0,15" FontStyle="Italic"/>

                <TextBlock Text="Chemin CryptoSoft.exe" Foreground="{StaticResource TextSecondary}" FontSize="12" Margin="0,0,0,6"/>
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <TextBox x:Name="TxtCryptoPath" Grid.Column="0"/>
                    <Button Content="..." Click="BtnBrowse_Click" Grid.Column="1" Width="40" Height="35" Margin="5,0,0,0" Background="#333" Foreground="White" BorderThickness="0" Cursor="Hand">
                        <Button.Template>
                            <ControlTemplate TargetType="Button">
                                <Border Background="{TemplateBinding Background}" CornerRadius="4">
                                    <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                </Border>
                            </ControlTemplate>
                        </Button.Template>
                    </Button>
                </Grid>
                <TextBlock Text="Laissez vide si non utilisé." Foreground="#555" FontSize="10" Margin="0,4,0,15" FontStyle="Italic"/>

                <TextBlock Text="Format du Log Journalier" Foreground="{StaticResource TextSecondary}" FontSize="12" Margin="0,0,0,10"/>
                <StackPanel Orientation="Horizontal">
                    <RadioButton x:Name="RadioJson" Content="JSON" GroupName="LogFmt" IsChecked="True" Foreground="{StaticResource TextPrimary}" Margin="0,0,20,0"/>
                    <RadioButton x:Name="RadioXml" Content="XML" GroupName="LogFmt" Foreground="{StaticResource TextPrimary}"/>
                </StackPanel>

                <TextBlock Text="Limite de transfert simultané (en Ko)" Foreground="{StaticResource TextSecondary}" FontSize="12" Margin="0,15,0,6"/>
                <TextBox x:Name="TxtMaxParallelFileSizeKb"/>
                <TextBlock Text="Mettre à 0 pour désactiver. Exemple: 10000 = 10Mo max en même temps" Foreground="#555" FontSize="10" Margin="0,4,0,15" FontStyle="Italic"/>
            </StackPanel>

            <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,20,0,0">
                <Button Content="Annuler" IsCancel="True" Click="BtnCancel_Click"
                        Width="90" Height="35" Background="Transparent" Foreground="{StaticResource TextSecondary}" BorderThickness="0" Margin="0,0,10,0" Cursor="Hand">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border Background="Transparent">
                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                            <ControlTemplate.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Foreground" Value="White"/>
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Button.Template>
                </Button>

                <Button Content="Sauvegarder" IsDefault="True" Click="BtnSave_Click"
                        Width="110" Height="35" Background="{StaticResource EmeraldColor}" Foreground="White" FontWeight="SemiBold" BorderThickness="0" Cursor="Hand">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border x:Name="border" Background="{TemplateBinding Background}" CornerRadius="4">
                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                            <ControlTemplate.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter TargetName="border" Property="Background" Value="{StaticResource EmeraldHover}"/>
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Button.Template>
                </Button>
            </StackPanel>
        </Grid>
    </Border>
</Window>