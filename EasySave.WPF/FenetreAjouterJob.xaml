<Window x:Class="EasySave.WPF.FenetreAjouterJob"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Créer un travail" Height="450" Width="500"
        WindowStartupLocation="CenterOwner"
        WindowStyle="None" ResizeMode="NoResize"
        AllowsTransparency="False" Background="#1E1E1E"
        MouseDown="Window_MouseDown">
    <WindowChrome.WindowChrome>
        <WindowChrome CaptionHeight="0" ResizeBorderThickness="5" GlassFrameThickness="1" CornerRadius="0"/>
    </WindowChrome.WindowChrome>

    <Border BorderBrush="#333333" BorderThickness="1">
        <Grid Margin="20">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <Grid Grid.Row="0" Margin="0,0,0,20">
                <TextBlock Text="➕  Nouveau Travail" Foreground="White" FontSize="22" FontWeight="Bold" VerticalAlignment="Center"/>

                <Button Click="BtnHeaderClose_Click" Width="30" Height="30" 
                        HorizontalAlignment="Right" VerticalAlignment="Top"
                        Background="Transparent" BorderThickness="0" Cursor="Hand">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border x:Name="border" Background="{TemplateBinding Background}" CornerRadius="5">
                                <TextBlock x:Name="icon" Text="✕" Foreground="#AAAAAA" FontSize="14" FontWeight="Bold" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                            <ControlTemplate.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter TargetName="border" Property="Background" Value="#E81123"/>
                                    <Setter TargetName="icon" Property="Foreground" Value="White"/>
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Button.Template>
                </Button>
            </Grid>

            <StackPanel Grid.Row="1">
                <TextBlock Text="Nom du travail" Foreground="#AAAAAA" Margin="0,0,0,5"/>
                <TextBox x:Name="TxtName" Height="35" Background="#2D2D30" Foreground="White" BorderBrush="#3E3E42" VerticalContentAlignment="Center" Padding="5"/>

                <TextBlock Text="Dossier Source" Foreground="#AAAAAA" Margin="0,15,0,5"/>
                <TextBox x:Name="TxtSource" Height="35" Background="#2D2D30" Foreground="White" BorderBrush="#3E3E42" VerticalContentAlignment="Center" Padding="5"/>
                <TextBlock Text=" Adresse complète du fichier (format UNC)." Foreground="#666666" FontSize="11" Margin="0,2,0,0"/>

                <TextBlock Text="Dossier Cible" Foreground="#AAAAAA" Margin="0,15,0,5"/>
                <TextBox x:Name="TxtTarget" Height="35" Background="#2D2D30" Foreground="White" BorderBrush="#3E3E42" VerticalContentAlignment="Center" Padding="5"/>

                <TextBlock Text="Type de sauvegarde" Foreground="#AAAAAA" Margin="0,15,0,10"/>
                <StackPanel Orientation="Horizontal">
                    <RadioButton x:Name="RadioFull" Content="Complète" IsChecked="True" Foreground="White" Margin="0,0,20,0"/>
                    <RadioButton x:Name="RadioDiff" Content="Différentielle" Foreground="White"/>
                </StackPanel>
            </StackPanel>

            <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,20,0,0">
                <Button Content="Annuler" IsCancel="True" Click="BtnCancel_Click"
                        Width="100" Height="35" Background="Transparent" Foreground="#AAAAAA" BorderThickness="0" Margin="0,0,10,0" Cursor="Hand"/>

                <Button Content="Enregistrer" IsDefault="True" Click="BtnSave_Click"
                        Width="120" Height="35" Background="#007ACC" Foreground="White" FontWeight="Bold" BorderThickness="0" Cursor="Hand">
                    <Button.Template>
                        <ControlTemplate TargetType="Button">
                            <Border x:Name="border" Background="{TemplateBinding Background}" CornerRadius="4">
                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                            </Border>
                            <ControlTemplate.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter TargetName="border" Property="Background" Value="#1E90FF"/>
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Button.Template>
                </Button>
            </StackPanel>
        </Grid>
    </Border>
</Window>